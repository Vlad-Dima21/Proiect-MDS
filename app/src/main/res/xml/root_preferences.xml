<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/user_settings">

        <EditTextPreference
            app:key="username"
            app:title="@string/username"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="email"
            app:title="@string/email"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">

        <SwitchPreferenceCompat
            app:key="dark"
            app:summary="Switches between Light and Dark mode"
            app:title="@string/dark_mode" />

        <ListPreference
            app:key="color"
            app:title="@string/navBar"
            app:entries="@array/colors"
            app:entryValues="@array/colors"
            app:summary="Change your navigation bar's color"/>

        <ListPreference
            app:key="color2"
            app:title="@string/statBar"
            app:entries="@array/colors"
            app:entryValues="@array/colors"
            app:summary="Customize your status bar's color"/>


    </PreferenceCategory>
    <PreferenceCategory app:title="About us">

        <Preference
            app:key="bitbucket"
            app:title="@string/bitBucket"
            app:summary="Come look at our BitBucket commits"/>

        <Preference
            app:key="jira"
            app:title="@string/Jira"
            app:summary="Inspect our Jira Issues"/>

    </PreferenceCategory>

</PreferenceScreen>